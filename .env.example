# Environment variables for Bankly
# Copy this file to .env and edit values for your environment
# Default language for the application ("en" or "fr")
DEFAULT_LANGUAGE=en
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX=60
ALLOW_NEGATIVE_BALANCE=false
DEFAULT_CURRENCY=€
DEFAULT_CURRENCY_PATTERN=%v %c
# CLIENT_IDLE_TIMEOUT_MS: Idle logout timeout for user dashboards (milliseconds). Set to 0 to disable (default 60000 = 60s).
CLIENT_IDLE_TIMEOUT_MS=60000
# CLIENT_IDLE_WARN_MS: Warning period (milliseconds) shown to the user before automatic logout. Must be less than CLIENT_IDLE_TIMEOUT_MS (default 10000 = 10s).
CLIENT_IDLE_WARN_MS=10000

# Other env variables (common defaults):
# PORT=3000
# JWT_SECRET=your_jwt_secret   # REQUIRED in production — use a long random value
# DATABASE_FILE=./data/bankly.db
# TASK_COOLDOWN_SECONDS=0  # Global default cooldown in seconds for task submissions (0 = disabled)
# SENTRY_DSN=
